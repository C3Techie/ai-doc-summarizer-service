# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=v1

# MongoDB Configuration (Free tier option: MongoDB Atlas Free Cluster)
MONGODB_URI=mongodb://localhost:27017/aidocsummarizer

# MinIO Configuration (Local object storage - S3-compatible)
MINIO_ENDPOINT=http://127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=aidocs

# OpenRouter Configuration (Free tier option: Use free or low-cost models like gpt-4o-mini)
OPENROUTER_API_KEY=your_openrouter_api_key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Storage Fallback (Optional - MinIO is primary storage)
STORAGE_PATH=./uploads

# Disable Console Ninja noisy output
CONSOLE_NINJA_ENABLED=false